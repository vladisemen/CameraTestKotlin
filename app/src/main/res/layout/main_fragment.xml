<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <Button
                android:id="@+id/button_post"
                android:layout_width="match_parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
                android:text="Запрос к серверу" />

            <Button
                android:id="@+id/button_open_camera"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/button_post"
                android:layout_height="wrap_content"
                android:text="Открыть камеру" />

            <Button
                android:id="@+id/button_show_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/button_open_camera"
                android:text="Отобразить фото" />

            <Button
                android:id="@+id/button_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/button_show_photo"
                android:text="Delete" />

            <Button
                android:id="@+id/button_openG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/button_delete"
                android:text="Открыть галерею" />

            <ImageView
                android:id="@+id/imageView"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/button_openG"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/this_is_imageview" />




        </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>




